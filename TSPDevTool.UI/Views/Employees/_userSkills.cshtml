                    error: function (response) {
                        alert(response.responseText);
                    }*@

        });
    </script>
    <table>
        <tr id="mainTr" style="max-width:10%;">  
            @foreach (var item in Model)
                {
                <th>
                    <span class="tag label label-info" style="background-color:@item.SkillLevel.Color">
                        <span class="skills">@Html.DisplayFor(modelItem => item.Skill.Name)</span>
                        <a class="theX"><i class="remove glyphicon glyphicon-remove-sign glyphicon-white"></i></a>
                        <input type="hidden" id="EmpSkillId" value="@item.ID"/>
                    </span>
                </th>
            }
        </tr>
    </table>
